@using XCode.RuningCode.Service.Dto.Blog
@{
    Layout = null;
}
@model List<ArticleDto>
    
@foreach (var article in Model)
            {
    <article class="excerpt excerpt-1" style="">
        <a class="focus" href="" title="@article.Title" target="_blank"><img class="thumb" data-original="/Template/front/web/images/slider/bg2.jpg" src="/Template/front/web/images/slider/bg2.jpg" alt="@article.Title" style="display: inline;"></a>
        <header>
            <a class="cat" href="" title="@article.Category.Name">@article.Category.Name<i></i></a>
            <h2>
                <a href="@Url.Action("Detial", "Blog", new {id = article.Id})" title="@article.Title" target="_blank">@article.Title</a>
            </h2>
        </header>
        <p class="note">@article.Content</p>
        <p class="meta">
            <time class="time"><i class="glyphicon glyphicon-time"></i> @article.CreateDateTime</time>
            <span class="views"><i class="glyphicon glyphicon-eye-open"></i> @article.Views</span> <a class="comment" href="" title="评论" target="_blank"><i class="glyphicon glyphicon-comment"></i> @article.CommentCount</a>
            @if (article.Author != null)
                {
                <span><a href="">@article.Author.RealName</a></span>
            }
        </p>
    </article>
}
