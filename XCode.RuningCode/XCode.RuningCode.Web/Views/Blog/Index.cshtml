@using XCode.RuningCode.Service.Dto.Blog
@model List<ArticleDto>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}

<section class="container" style="margin-top: 80px">
    <div class="content-wrap">
        <div class="content">

            @*轮播*@
            @Html.Action("Carousel", "Blog")

            @*推荐*@
            @Html.Action("Recommend", "Blog")

            @Html.Partial("_ArticleList", Model)
        </div>
    </div>
    
    <aside class="sidebar">
        @Html.Action("AuthorInfo", "Blog")
        @Html.Action("TagList", "Blog")
        @Html.Action("HotArticle", "Blog")
        @Html.Action("FriendLinkList", "Blog")
    </aside>
</section>
